.m_paginations
  margin-top 30px
  text-align center
  ul
    cursor default
  ul, li, button, a
    display inline-block
    vertical-align middle
  a, button
    width 30px
    height 36px
    border 1px solid #fff
    border-radius 5px
    line-height 34px
    text-align center
    background #fff
  button
    border 1px solid #ebebeb
    color $blue
    &:hover
      background $blue
      color #fff
      border-color $blue
    &.prev
      margin-right 5px
    &.next
      margin-left 5px
  a
    color $blue
    &:hover
      color $black
  .current
    a
      background #ebebeb
      color $black
      cursor default
  .mobile
    display none
    @media screen and (max-width: 480px)
      display inline-block
  .normal
    display inline-block
    @media screen and (max-width: 480px)
      display none