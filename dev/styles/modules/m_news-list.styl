.m_news-list
  clearfix()
  .col-1-of-3,
  .single
    position relative
    float left
    &:hover
      border-color transparent
      anim()
      .m_item
        background #fff
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        box-shadow 0 0 25px 5px rgba(0,0,0,.15)
        z-index 2002
        anim()
    .m_item
      height 100%
    .parent-helper
      display table
      width 100%
      height 100%
  .col-1-of-3
    height 360px

  .single
    width 100%
    height 320px
    border-top 1px solid #dcdcdc
    border-bottom 1px solid #dcdcdc
    .image,
    .description
      float left
      height 100%
      width 50%
    .description
      padding 0 2%
      .title
        a
          font-size 20px
          line-height 30px
      .post-date
        margin-top 10px
        margin-bottom 15px
      p
        margin 0
        font-size 15px
        line-height 22px
        color #404040
