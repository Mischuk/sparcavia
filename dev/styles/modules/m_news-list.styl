.m_news-list
  clearfix()
  .col-1-of-3,
  .single
    position relative
    float left
    @media screen and (max-width: 700px)
      float none
    @media screen and (min-width: 701px)
      &:hover
        border-color transparent
        anim()
        .m_item
          background #fff
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          box-shadow 0 0 25px 5px rgba(0,0,0,.2)
          z-index 2002
          anim()
      .m_item
        height 100%
      .parent-helper
        display table
        width 100%
        height 100%

  .col-1-of-3
    height 360px
    @media screen and (max-width: 700px)
      width 100%
      height auto
    .description
      height 150px
      padding 30px
      @media screen and (max-width: 1370px)
        padding 20px 6%
      @media screen and (max-width: 700px)
        padding 2%
        overflow visible
        height auto
        border-left none
      @media screen and (max-width: 420px)
        padding 5%
      .title
        height 76px
        @media screen and (max-width: 700px)
          height auto
        a
          font-size 16px
          line-height 19px
      .post-date
        line-height 1

  .single
    width 100%
    height 320px
    border-top 1px solid #dcdcdc
    border-bottom 1px solid #dcdcdc
    @media screen and (max-width: 700px)
      height auto
    .image,
    .description
      float left
      height 100%
      width 50%
      @media screen and (max-width: 700px)
        width 100%
        float none
        height auto
    .image
      @media screen and (max-width: 700px)
        height 320px
      @media screen and (max-height: 300px)
        height 240px
    .description
      padding 0 2%
      @media screen and (max-width: 700px)
        padding-bottom 2%
        padding-top 2%
      @media screen and (max-width: 420px)
        padding 5%
      .title
        a
          font-size 20px
          line-height 30px
          @media screen and (max-width: 1024px)
            font-size 18px
            line-height 22px

      .post-date
        margin-top 10px
        margin-bottom 15px
      p
        margin 0
        font-size 15px
        line-height 22px
        color #404040
        height 130px
        overflow hidden
        @media screen and (max-width: 700px)
          height auto
