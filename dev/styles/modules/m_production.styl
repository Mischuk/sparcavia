.m_production
  clearfix()
  padding-bottom 50px
  background #fff
  @media screen and (max-width: 700px)
    padding-bottom 4%
  .m_carousel-default,
  .lead-desc
    width 49%
    height 300px
    float left
    @media screen and (max-width: 700px)
      width 100%
      float none !important
  .m_carousel-default
    float left
    .slick-dots
      display none !important
    .carousel-default-single, .slide
      height 300px
  .lead-desc
    position relative
    margin-left 2%
    @media screen and (max-width: 1024px)
      // height auto
      overflow hidden
      padding-bottom 54px
    @media screen and (max-width: 700px)
      margin-left 0
      padding-left 2%
      padding-right 2%
      padding-top 2%
      height auto
    @media screen and (max-width: 420px)
      padding-left 5%
      padding-right 5%
      padding-top 5%
    p
      margin-top 0
      font-size 15px
      line-height 22px
      @media screen and (max-width: 1024px)
        line-height 19px
    .buttons
      clearfix()
      position absolute
      left 0
      bottom 0
      width 100%
      height 50px
      padding-right 4%
      background #fff
      @media screen and (max-width: 700px)
        padding-right 2%
        padding-left 2%
      a
        float left
        display block
        width 40%
        height 50px
        line-height 50px
        text-align center
        font-size 16px
        line-height 46px
        border-radius 5px
        @media screen and (max-width: 1024px)
          width 48%
        @media screen and (max-width: 420px)
          font-size 14px
      .download
        margin-left 20%
        border 2px solid #dcdcdc
        color #404040
        @media screen and (max-width: 1024px)
          margin-left 4%
        &:hover
          background $blue -10%
          border-color $blue
          color #fff
      .send-request
        background $blue
        color #fff
        border 2px solid $blue
        &:hover
          background $blue - 10%
          border 2px solid $blue - 10%