.m_header,
.m_header-inner
  clearfix()
  text-align right
  padding-top 15px
  padding-right 2%
  position absolute
  right 0
  top 0
  @media screen and (max-width: 700px)
    display none
  ul
    float right
    li
      display inline-block
      vertical-align middle
      margin-right 30px
      a
        font-size 15px
  a
    display inline-block
    vertical-align middle
    line-height 18px
    color #fff
    border-bottom 1px solid $border-white
    &:hover
      border-color #fff
  .lang
    float right
    div
      margin-bottom 5px
    a
      display block
      font-size 15px
      line-height 18px
      padding 5px 10px
      border-bottom none
      span
        border-bottom 1px solid $border-white
        &:hover
          border-color #fff
    .current
      cursor default
      a
        border 1px solid #fff
        border-radius 3px
        span
          border-bottom none
          font-weight bold

