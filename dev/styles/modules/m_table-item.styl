.m_table-item
  position relative
  float left
  height 320px
  @media screen and (max-height: 300px)
    height 240px
  @media screen and (max-width: 700px)
    width 100%
    float none
  .helper-parent
    display table
    width 100%
    height 100%
  .title, .detail
    position relative
    z-index 1
    text-align center
  .title
    position relative
    z-index 2
    font-weight 600
    font-size 26px
    line-height 36px
    margin-bottom 30px
    @media screen and (max-width: 1200px)
      font-size 18px
      line-height 24px
    @media screen and (max-width: 700px)
      font-size 26px
      line-height 36px
    @media screen and (max-width: 340px)
      font-size 21px
      line-height 26px
    a
      color rgba(255,255,255,.25)
      text-decoration underline
      span
        color #fff
      &:hover
        color rgba(255,255,255,.99)
        text-decoration underline
        span
          color rgba(255,255,255,.99)
  .detail
    position relative
    z-index 2
    width 155px
    margin-left auto
    margin-right auto
    height 34px
    border 1px solid #fff
    border-radius 5px
    line-height 30px
    overflow hidden
    a
      display block
      width 100%
      height 100%
      color #fff
      font-size 15px
      &:hover
        background-color #fff
        color $black
  .image
    position absolute
    left 0
    top 0
    overflow hidden
    width 100%
    height 100%
    a
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
      &:first-child
        &:after
          content ""
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(0,0,0,.6)
    .hover
      @media screen and (max-width: 1024px)
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        opacity 0
        &:before
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background $border-blue
          z-index 1
  @media screen and (min-width: 1024px)
    .hover
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      &:after
        content ""
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background url("../images/lines.png") no-repeat 0 0
        z-index 2
        background-size contain
        transform translateX(-100%) translateY(100%)
        transition transform .5s ease-out
        transition-delay .75s
      &:before
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background $border-blue
        z-index 1

      &.anim-in
        opacity 1
        animation animin 1s ease-out
        &:after
          transform translateX(0%) translateY(0%)
        @keyframes animin
          0%
            -webkit-clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 50% 0, 50% 0);
            clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 50% 0, 50% 0);
          25%
            -webkit-clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 100% 0, 0% 0);
            clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 100% 0, 0% 0);
          50%
            -webkit-clip-path: polygon(50% 50%, 0 100%, 100% 100%, 50% 50%, 100% 0, 0 0);
            clip-path: polygon(50% 50%, 0 100%, 100% 100%, 50% 50%, 100% 0, 0 0);
          75%
            -webkit-clip-path: polygon(50% 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
            clip-path: polygon(50% 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
          100%
            -webkit-clip-path: polygon(0 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
            clip-path: polygon(0 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
      &.anim-out
        opacity 1
        animation animout .5s ease-out
        &:after
          transform translateX(-100%) translateY(100%)
          transition transform 1s ease-out
          transition-delay 0s
        @keyframes animout
          0%
            -webkit-clip-path: polygon(0 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
            clip-path: polygon(0 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
          25%
            -webkit-clip-path: polygon(50% 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
            clip-path: polygon(50% 50%, 0 100%, 100% 100%, 100% 50%, 100% 0, 0 0);
          50%
            -webkit-clip-path: polygon(50% 50%, 0 100%, 100% 100%, 50% 50%, 100% 0, 0 0);
            clip-path: polygon(50% 50%, 0 100%, 100% 100%, 50% 50%, 100% 0, 0 0);
          75%
            -webkit-clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 100% 0, 0% 0);
            clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 100% 0, 0% 0);
          100%
            -webkit-clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 50% 0, 50% 0);
            clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 50%, 50% 0, 50% 0);

