.m_table-item
  position relative
  float left
  height 320px
  @media screen and (max-width: 700px)
    width 100%
    float none
  .helper-parent
    display table
    width 100%
    height 100%
  .image
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover
    &:after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background rgba(0,0,0,.6)
  .title, .detail
    position relative
    z-index 1
    text-align center
  .title
    font-weight 600
    font-size 26px
    line-height 36px
    margin-bottom 30px
    @media screen and (max-width: 1200px)
      font-size 18px
      line-height 24px
    @media screen and (max-width: 700px)
      font-size 26px
      line-height 36px
    @media screen and (max-width: 340px)
      font-size 21px
      line-height 26px
    a
      color rgba(255,255,255,.25)
      text-decoration underline
      span
        color #fff
      &:hover
        color rgba(255,255,255,.99)
        text-decoration underline
        span
          color rgba(255,255,255,.99)
  .detail
    width 155px
    margin-left auto
    margin-right auto
    height 34px
    border 1px solid #fff
    border-radius 5px
    line-height 30px
    overflow hidden
    a
      display block
      width 100%
      height 100%
      color #fff
      font-size 15px
      &:hover
        background-color #fff
        color $black

