$carouselHeight = 500px


.m_carousel-default
  position relative
  height $carouselHeight
  overflow hidden
  @media screen and (max-width: 700px)
    height auto
  .carousel-default-single,
  .slide
    position relative
    height $carouselHeight
    @media screen and (max-width: 700px)
      height auto
  .image
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50% 50%
    background-size cover
    @media screen and (max-width: 700px)
      height 320px
  .description
    position absolute
    left 0
    bottom 0
    width 100%
    background $bg-blue-rgba
    padding-bottom 40px
    padding-top 15px
    padding-left 2%
    padding-right 2%
    @media screen and (max-width: 700px)
      position static
      padding-bottom 20px
    @media screen and (max-width: 420px)
      padding-left 5%
      padding-right 5%
    a
      color rgba(255,255,255,.5)
      text-decoration underline
      span
        color #fff
        font-size 20px
        line-height 30px
        @media screen and (max-width: 1024px)
          font-size 18px
          line-height 22px
        @media screen and (max-width: 420px)
          font-size 18px
          line-height 1.2
      &:hover
        color rgba(255,255,255,.99)
        span
          color rgba(255,255,255,.99)

