.m_vacancy-form
  background #f5f5f5
  padding 2%
  margin-bottom -30px
  margin-top 30px
  .title
    text-align left
    font-size 30px
    padding-bottom 20px
    padding-top 0
    border-bottom 2px solid $pink
    margin-bottom 20px
    width 50%
    @media screen and (max-width: 680px)
      width 100%
  .remark
    color #404040
    font-size 12px
    line-height 12px
    margin-bottom 5px
  .form
    width 50%
    @media screen and (max-width: 680px)
      width 100%
  input,
  textarea
    font-family 'Open Sans', sans-serif
    width 100%
    border 1px solid #dcdcdc
    padding-left 15px
    padding-right 15px
    color #404040
    margin-bottom 15px
    font-size 15px
    &:focus
      border-color $blue
  input
    line-height 42px
    height 44px
  textarea
    padding-top 5px
    padding-bottom 5px
    height 160px
    max-width 100%
    max-height 400px
  .fileUpload
    position relative
    overflow hidden
    display inline-block
    vertical-align middle
    height 35px
    width 180px
    border 2px solid #dcdcdc
    border-radius 5px
    line-height 29px
    cursor pointer !important
    &:hover
      border-color $blue
      background $blue
      &:after
        border-color #fff
        color #fff
      span
        color #fff !important
        opacity 1
        z-index 1

    &:after
      content '+'
      width 18px
      height 18px
      line-height 15px
      text-align center
      border 1px solid gray
      border-radius 50%
      position absolute
      display block
      left 7px
      top 50%
      margin-top -9px
      cursor pointer !important
    span
      color #404040
      display inline-block
      vertical-align middle
      font-size 14px
      padding-left 30px
      cursor pointer !important
      position relative
      // z-index -1
      // opacity .99

    input
      &.upload
        cursor pointer !important
        position absolute !important
        top 0
        right 0
        margin 0
        padding 0
        font-size 20px
        cursor pointer
        opacity 0
        margin-bottom 0
        padding-left 0
        padding-right 0
        line-height 35px !important
        height 35px !important
        width 100% !important
        border none
        z-index 2
        font-size 0
  .uploaded
    margin-bottom 15px
  .submit
    height 50px
    line-height 50px
    border none
    background #0c51a1
    color #fff
    text-align center
    border-radius 5px
    width 220px
    &:hover
      background #0c51a1 - 10%
  .attach-label
    display inline-block
    vertical-align middle
    font-size 14px
    line-height 20px
    margin-right 25px
  .attach-label,
  .fileUpload
    margin-top 10px
    margin-bottom 20px