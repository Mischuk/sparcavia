.m_lead-intro
  background url("../images/content/lead.jpg") no-repeat 50% 50%
  background-size cover
  height 555px
  @media screen and (max-width: 700px)
    height 400px
  .slogan
    display table
    text-align center
    width 100%
    height 100%
    font-size 40px
    color #fff
    font-weight bold
    @media screen and (max-width: 1024px)
      font-size 36px
    span
      position relative
      display inline-block
      vertical-align middle
      line-height 1.25
      text-shadow 1px 1px 1px rgba(0,0,0,.9)
      color #fff
      br
        display none
        @media screen and (max-width: 900px)
          display block
