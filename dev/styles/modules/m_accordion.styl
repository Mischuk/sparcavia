.m_accordion
  position relative
  .accordion-header
    &.open
      text-decoration none
      span
        color #404040
  .accordion-body
    display none
    position relative
    margin-top 30px
    background #fafafa
    border 1px solid #f5f5f5
    border-radius 5px
    padding 25px 30px
    @media screen and (max-width: 568px)
      padding 5%
      margin-left -30px
    &.open
      display block
    &:after,
    &:before
      bottom: 100%;
      left: 35px;
      border: solid transparent;
      content: " ";
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
    &:after
      border-color: rgba(250, 250, 250, 0);
      border-bottom-color: #fafafa;
      border-width: 15px;
    &:before
      border-color: rgba(245, 245, 245, 0);
      border-bottom-color: #f5f5f5;
      border-width: 16px;
      left 34px
    ul
      font-size 14px
      ul
        li
          margin-top 15px
          margin-bottom 15px
          padding-left 15px
          &:before
            width 6px
            height 6px
            border 1px solid $pink
            border-radius 50%
            background none
            top 5px
    .table-wrapper
      width 100%
      overflow auto
      table
        width 600px
        min-width 600px
        @media screen and (max-width: 900px)
          margin-bottom 5px
          box-shadow none



