.m_item
  position relative
  .image
    height 210px
    @media screen and (max-width: 700px) and (min-width: 421px)
      height 320px

    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
  .description
    padding 30px 6%
    border-left 1px solid #dcdcdc
    height 159px
    overflow hidden
    @media screen and (max-width: 1370px)
      padding 20px 6%
    @media screen and (max-width: 700px)
      padding 2%
      overflow visible
      height auto
      border-left none
    @media screen and (max-width: 420px)
      padding 5%
    .title
      height 66px
      overflow hidden
      @media screen and (max-width: 1370px)
        height 90px
      @media screen and (max-width: 700px)
        height auto
      a
        color $border-blue
        text-decoration underline
        font-size 16px
        line-height 22px
        span
          color $blue
        &:hover
          color rgba(12, 81, 161, .99)
          span
            color rgba(12, 81, 161, .99)
    .post-date
      margin-top 15px
      font-size 15px
      color #8d8d8d
      cursor default