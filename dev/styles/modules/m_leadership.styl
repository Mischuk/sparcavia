.m_leadership
  @media screen and (max-width: 568px)
    padding-top 5%
  .item
    clearfix()
    padding 30px 0
    border-bottom 1px solid #dcdcdc
    min-height 300px
    &:first-child
      padding-top 0
    &:last-child
      border-bottom none
    .image
      float left
      width 240px
      height 300px
      margin-right 30px
      background-repeat no-repeat
      background-position top center
      background-size cover
      @media screen and (max-width: 568px)
        width 33%
        height 200px
        margin-right 0
      @media screen and (max-width: 380px)
        width 100%
        height 300px
        float none
        background-position 50% 10%
    .manager-info
      color #404040
      @media screen and (max-width: 1000px)
        padding-left 270px
      @media screen and (max-width: 568px)
        padding-left 35%
      @media screen and (max-width: 380px)
        padding-left 0
        padding-top 20px

      .from
        color #404040
        font-size 14px
        line-height 14px
        margin-bottom 10px
      .name
        font-weight 500
        font-size 20px
        line-height 20px
        margin-bottom 20px
      .birth, .education
        .title
          display inline-block
          vertical-align middle
          width 115px
          color #8d8d8d
          font-size 15px
          line-height 22px
      .birth
        margin-bottom 15px
        .value
          display inline-block
          vertical-align middle
          color #404040
          font-size 15px
          line-height 22px
          @media screen and (max-width: 700px)
            display block
      .education
        .value
          display: inline-block;
          width: 60%;
          vertical-align: top;
          @media screen and (max-width: 1250px)
            width 50%
          @media screen and (max-width: 1000px)
            width 100%
          p
            margin-top 0
            color #404040
            font-size 15px
            line-height 22px
            &:last-child
              margin-bottom 0
