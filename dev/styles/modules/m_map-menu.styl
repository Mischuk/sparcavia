.m_map-menu
  display none
  position fixed
  background #fff
  left 215px
  top 172px
  z-index 35
  width 970px
  box-shadow 0 0 15px rgba(0,0,0,.5)
  @media screen and (max-width: 1200px)
    width 82%
    left 18%
  @media screen and (max-width: 700px)
    position absolute
    transition transform .25s ease-in, opacity 1s ease-in
    display block
    left 0
    width 100%
    top 80px
    opacity 0
    transform translateY(-100%)
    &.open
      transition all .25s ease-out
      transform translateY(0%)
      opacity 1
  &.open
    display block
  .search
    position relative
    height 42px
    display none
    @media screen and (max-width: 700px)
      display block
    .text
      display block
      width 100%
      background #ebebeb
      border none
      padding-left 15px
      padding-right 55px
      font-size 15px
      height 42px
      line-height 42px
      border 1px solid #ebebeb
      color $gray-dark
      anim()
      &:focus
        background #fff
        & + .submit
          background #fff
          .icon-search
            color $blue
    .submit
      position absolute
      right 1px
      top 1px
      width 40px
      height 40px
      background #ebebeb
      border none
      anim()
      .icon-search
        color #606060
        anim()
  .lead-nav,
  .all-links
    clearfix()
    padding 20px 45px
    @media screen and (max-width: 700px)
      padding 10px 15px
    .col
      float left
      width 25%
      @media screen and (max-width: 700px)
        width 50%
        padding-top 20px
        padding-bottom 10px
        &:nth-child(3)
          margin-top -40px
    a
      display inline
      vertical-align middle
      font-size 18px
      line-height 18px
      color $blue
      border-bottom 1px solid $border-blue
      &:hover
        border-color $blue
      @media screen and (max-width: 700px)
        br
          display none
  .all-links
    li
      padding 5px 0
      padding-right 10px
    a
      font-size 15px
      @media screen and (max-width: 900px)
        font-size 13px
    .category
      margin-bottom 15px
      @media screen and (max-width: 700px)
        margin-bottom 10px
      a
        color $black
        font-size 16px
        font-weight bold
        border-color $border-black
        @media screen and (max-width: 900px)
          font-size 14px
        &:hover
          border-color $black
  .lead-nav
    ul
      clearfix()
    li
      float left
      width 25%
      line-height 24px
      @media screen and (max-width: 700px)
        width 50%
        margin-top 5px
        margin-bottom 5px
        br
          display none
      a
        display inline
        vertical-align middle
        font-size 18px
        line-height 18px
        color $blue
        border-bottom 1px solid $border-blue
        @media screen and (max-width: 900px)
          font-size 16px
        &:hover
          border-color $blue