.m_sidebar-shadow
  position fixed
  left 0
  top 0
  width 215px
  height 100%
  box-shadow 0 0 15px rgba(0, 0, 0, .25)
  background #fafafa
  z-index 10
  @media screen and (max-width: 1200px)
    width 18%
  @media screen and (max-width: 700px)
    display none
.m_sidebar
  background #fafafa
  z-index 50
  @media screen and (max-width: 700px)
    box-shadow 0 0 10px rgba(0, 0, 0, .25)
  &.open
    .sidebar-layout
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 10

  .logo
    width 100%
    height 110px
    margin-top 10px
    margin-bottom 10px
    @media screen and (max-width: 700px)
      height 65px
      width 65px
      margin-top 5px
      margin-bottom 5px
      position absolute
      left 70px
      top 0
    @media screen and (max-width: 480px)
      left 50%
      margin-left -32.5px
    a
      display block
      width 100%
      height 100%
      background url("../images/logo.png") no-repeat 50% 50%
      background url("../images/logo.svg") no-repeat 50% 50%
      background-size contain
  .search
    position relative
    height 42px
    @media screen and (max-width: 700px)
      display none
    .text
      display block
      width 100%
      background #ebebeb
      border none
      padding-left 15px
      padding-right 55px
      font-size 15px
      height 42px
      line-height 42px
      border 1px solid #ebebeb
      color $gray-dark
      anim()
      &:focus
        background #fff
        & + .submit
          background #fff
          .icon-search
            color $blue
    .submit
      position absolute
      right 1px
      top 1px
      width 40px
      height 40px
      background #ebebeb
      border none
      anim()
      .icon-search
        color #606060
        anim()
  .map
    position relative
    text-align center
    margin-bottom 20px
    padding-top 20px
    padding-bottom 20px
    @media screen and (max-height: 870px)
      margin-bottom 0
    @media screen and (max-width: 700px)
      display none
    &.open
      z-index 30
      background #fff
      box-shadow -15px 0 15px rgba(0,0,0,.5)
      .label
        color #606060
        border-color #fff !important
      .burger
        span
          opacity 0
          transform translateX(-5px)
        &:after
          transform: rotate(135deg) translate(-3px, 3px);
        &:before
          transform: rotate(-135deg) translate(-4px, -4px);
    a
      position relative
      padding-left 30px
      color $blue
      font-size 18px
      line-height 18px
      @media screen and (max-width: 900px)
        font-size 16px
        padding-left 25px
      .label
        border-bottom 1px dashed $border-blue
        &:hover
          border-color $blue
      .burger
        position absolute
        left 0
        top 50%
        width 20px
        height 12px
        margin-top -6px
        &:after, &:before
          content ''
          position absolute
          left 0
          width 100%
          height 2px
          background #606060
          anim()
        &:before
          top 0
        &:after
          bottom 0
        span
          anim()
          position absolute
          left 0
          top 50%
          width 100%
          background #606060
          height 2px
          margin-top -1px
  .menu
    padding-bottom 15px
    @media screen and (max-width: 700px)
      clearfix()
      width 100%
      height 100%
      padding-left 150px
      padding-bottom 0
    @media screen and (max-width: 480px)
      display none
    .item
      width 100%
      text-align center
      @media screen and (max-width: 700px)
        width 33.333%
        float left
        height 100%
      a
        display block
        padding-top 30px
        padding-bottom 30px
        @media screen and (max-height: 870px) and (min-width: 701px)
          padding-top 20px
          padding-bottom 20px
        @media screen and (max-height: 800px) and (min-width: 701px)
          padding-top 10px
          padding-bottom 10px
        @media screen and (max-width: 700px)
          position relative
          height 100%
          padding-top 0
          padding-bottom 0
      .label
        anim()
        display inline-block
        vertical-align middle
        margin-top 10px
        font-size 18px
        line-height 20px
        color $blue
        border-bottom 1px solid $border-blue
        &:hover
          border-color $blue
        @media screen and (max-height: 740px) and (min-width: 701px)
          margin-top 0
        @media screen and (max-width: 700px)
          position absolute
          left 0
          bottom 0
          width 100%
          padding-bottom 10px
          border-bottom none
          font-size 14px

      .icon
        display block
        margin-left auto
        margin-right auto
        max-width 100%
        @media screen and (max-height: 740px) and (min-width: 701px)
          display none
      .services
        @media screen and (max-width: 700px)
          padding-top 5px
        .icon
          width 46px
          height 42px
          background url("../images/icon-services.svg") no-repeat 0 0
          background-size contain
        &:hover,
        &.current
          .icon
            background url("../images/icon-services-active.svg") no-repeat 0 0
            background-size contain
      .productions
        @media screen and (max-width: 700px)
          padding-top 12px
        .icon
          width 110px
          height 30px
          background url("../images/icon-productions.svg") no-repeat 0 0
          background-size contain
        &:hover,
        &.current
          .icon
            background url("../images/icon-productions-active.svg") no-repeat 0 0
            background-size contain
      .news
        @media screen and (max-width: 700px)
          padding-top 10px
        .icon
          width 41px
          height 36px
          background url("../images/icon-news.svg") no-repeat 0 0
          background-size contain
        &:hover,
        &.current
          .icon
            background url("../images/icon-news-active.svg") no-repeat 0 0
            background-size contain

