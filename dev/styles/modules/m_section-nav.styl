.m_section-nav
  padding-left 2%
  padding-right 2%
  margin-bottom 15px
  @media screen and (max-width: 700px)
    // margin-top 25px
    margin-top 15px
    margin-bottom 15px
  @media screen and (max-width: 420px)
    padding-left 5%
    padding-right 5%
  ul
    cursor default
  li
    display inline-block
    vertical-align middle
    margin-right 5px
    margin-bottom 10px
    height 36px
    line-height 36px
    &:last-child
      margin-right 0
    a
      font-size 16px
      line-height 1
      padding-left 10px
      padding-right 10px
      underline()
    &.current
      background url("../images/texture_bluse.jpg") repeat 0 0
      border-radius 5px
      overflow hidden
      a
        text-decoration none
        cursor default
        span
          color #fff
