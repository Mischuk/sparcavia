.mobile-menu-trigger
  display none
  position absolute
  left 10px
  top 50%
  width 32px
  height 22px
  margin-top -(@height/2)
  &.invert
    left auto
    right 15px
    top 25px
  @media screen and (max-width: 700px)
    display block
  &:after, &:before
    content ''
    position absolute
    left 0
    width 100%
    height 3px
    background #606060
    anim()
  &:before
    top 0
  &:after
    bottom 0
  span
    anim()
    position absolute
    left 0
    top 50%
    width 100%
    background #606060
    height 3px
    margin-top -1px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform: rotate(135deg) translate(-7px, 7px);
    &:before
      transform: rotate(-135deg) translate(-6px, -6px);

// Slick
.slick-dots
  position absolute
  left 0
  bottom 15px
  width 100%
  height 10px
  text-align center
  @media screen and (max-width: 700px)
    bottom auto
    top 295px
  ul, li
    display inline-block
  li
    margin-left 5px
    margin-right 5px
    width 10px
    height 10px
    button
      anim()
      display block
      width 100%
      height 100%
      padding 0
      border none
      text-indent -9999px
      background #fff
      border-radius 50%
      @media screen and (max-width: 700px)
        box-shadow 0 0 5px rgba(0,0,0, .25)
    &.slick-active button
      background $pink
.slick-arrow
  anim()
  width 45px
  height 45px
  background $bg-blue-dark-rgba
  border none
  text-indent -9999px
  top 50%
  position absolute
  margin-top -(@height/2)
  text-align center
  z-index 5
  &.light
    background url("../images/texture_bluse.jpg") repeat 0 0 !important
    opacity .9
    &:hover
      opacity 1
  &:hover
    background $blue-dark
  &:after
    icon()
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    line-height 45px
    font-size 30px
    color #fff
    text-indent 0
  &.slick-prev
    left 0
    &:after
      content '\e904'
  &.slick-next
    right 0
    &:after
      content '\e902'

