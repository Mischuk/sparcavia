// Headling
.headling
  font-weight normal
  font-size 36px
  line-height 36px
  color $black
  padding-left 2%
  padding-right 2%
  padding-bottom 25px
  padding-top 30px
  @media screen and (max-width: 1024px)
    font-size 30px
    line-height 1
  @media screen and (max-width: 700px)
    font-size 24px
    line-height 1
    padding-top 15px
    padding-bottom 15px
  @media screen and (max-width: 420px)
    padding-left 5%
    padding-right 5%
  &.mobile-hidden
    @media screen and (max-width: 700px)
      display none !important
h2.headling
  padding-top 0


// Lists
main
  h2
    font-size 30px
    line-height 30px
    margin-top 35px
    margin-bottom 25px
  h3
    font-weight bold
    margin 15px 0
    font-size 20px
    line-height 20px
  h4
    font-size 15px
    line-height 15px
    font-weight bold
    margin-top 35px
    margin-bottom 10px
  h5
    color #404040
    font-weight bold
    font-size 15px
    margin 25px 0 15px 0
  p
    font-size 15px
    line-height 22px
    margin 15px 0
  > ul
    li
      position relative
      padding-left 30px
      margin-bottom 25px
      &:before
        content ''
        position absolute
        left 0
        top 9px
        width 10px
        height 1px
        background $pink
      &:last-child
        margin-bottom 0

    a
      underline()
      font-size 15px
      line-height 15px
  blockquote
    border 2px dashed $pink
    border-radius 5px
    background url("../images/pattern-pink.png") repeat 0 0
    font-style italic
    color $black
    font-size 16px
    line-height 26px
    padding 2%
    margin 20px 0
