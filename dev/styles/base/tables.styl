.table-colored
  box-shadow 0 1px 5px -1px rgba(0,0,0,.25)
  margin-bottom 45px
  tr
    th
      border-bottom 3px solid $pink
      color #8d8d8d
      font-size 16px
      font-weight normal
      text-align left
      padding 15px
      @media screen and (max-width: 700px)
        font-size 14px
  tr
    &:nth-child(even)
      td
        background #fafafa
    &:nth-child(even)
      td
        background #fff
    td
      padding 10px 5px 10px 15px
      font-size 15px
      line-height 22px
      @media screen and (max-width: 700px)
        font-size 14px
        vertical-align top
      &:last-child
        padding-right 15px
.table-mobile-hidden-last
  @media screen and (max-width: 700px)
    tr td:last-child
      display none
table.equal
  @media screen and (max-width: 700px)
    table-layout fixed
    font-size 14px
table
  width 100%
  tr
    td
      padding-top 10px
      padding-bottom 10px
      color #404040
      transition background .25s ease-in
    &:hover
      td
        background #fafafa - 5% !important